{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "explorer.autoReveal": false,
    "search.quickOpen.includeHistory": false,
    "C_Cpp.autoAddFileAssociations": false,
    "search.useIgnoreFiles": true, // exclude files in .gitignore
    "search.exclude": {
        "dist": true,
        "**/lib/monlang*": true, // modules that depends on monlang(-LV1) module

        "lib/**/include/monlang*": true, // other modules that use monlang(-LV1) interface
        "lib/**/include/utils": true, // other modules that use utils interface
    },
}
